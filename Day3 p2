# Function to display the elements of the array
def display_array(arr):
    print("Elements of the array are:")
    for element in arr:
        print(element)

# Function to store elements in an array
def store_elements():
    # Create an empty list to store elements
    arr = []

    # Get the number of elements from the user
    num_elements = int(input("Enter the number of elements you want to store: "))

    # Loop to get each element from the user
    for i in range(num_elements):
        element = input(f"Enter element {i + 1}: ")
        arr.append(element)
    
    return arr

# Function to search for an element in the array
def search_element(arr, target):
    try:
        # Find the index of the target element
        index = arr.index(target)
        return index
    except ValueError:
        # If the element is not found, return -1
        return -1

# Main function to run the program
def main():
    # Store elements in the array
    array = store_elements()
    
    # Display the elements of the array
    display_array(array)
    
    # Get the element to search for from the user
    target_element = input("Enter the element you want to search for: ")
    
    # Search for the element in the array
    position = search_element(array, target_element)
    
    # Display the result of the search
    if position != -1:
        print(f"Element '{target_element}' found at position: {position + 1}")
    else:
        print(f"Element '{target_element}' not found in the array.")

# Run the main function
if __name__ == "__main__":
    main()
